<Window x:Class="SalesWPFApp.SalesManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesWPFApp"
        mc:Ignorable="d"
        WindowStartupLocation ="CenterScreen"
        Title="SalesManagement" Height="800" Width="800">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel  VerticalAlignment="Top" HorizontalAlignment="Center" Orientation="Horizontal" Height="30" Margin="0,10,0,0">
            <Button Name="btnProduct" Click="btnProduct_Click">Products</Button>
            <Button Name="btnMember" Click="btnMember_Click">Members</Button>
            <Button Name="btnOrder" Click="btnOrder_Click">Orders</Button>
        </StackPanel>
        <Frame Name="Management" Margin="0,50,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
